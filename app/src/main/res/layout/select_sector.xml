<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/center_selsec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <sandeep.city.Views.ImageIcon
        android:id="@+id/ivPublicSector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/center_selsec"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        app:title_name="PUBLIC"
        app:image_icon="@drawable/pub"
        app:text_size="@android:style/TextAppearance.Large"/>


    <sandeep.city.Views.ImageIcon
        android:id="@+id/ivPrivateSector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/center_selsec"
        android:layout_marginTop="30dp"
        app:image_icon="@drawable/social"
        app:title_name="SOCIAL"
        app:text_size="@android:style/TextAppearance.Large"/>
</RelativeLayout>