<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relLay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="15dp" >

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Category"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tvComplaintTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCategory"
            android:layout_marginTop="10dp"
            android:text="*Title(max 100 char.):"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/etComplaintTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvComplaintTitle"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="TITLE EXAMPLE">
        </TextView>

        <TextView
            android:id="@+id/tvCompDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etComplaintTitle"
            android:layout_marginTop="10dp"
            android:text="*Description:" />

        <TextView
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCompDescription"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="Example text. In my world, in my world this is where we all came from. Thre dreams we had, love we give this is what we are waiting for"/>
        <LinearLayout
            android:id="@+id/location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/etDescription"
            android:gravity="center_horizontal">





            <ImageView
                android:id="@+id/bPickLocation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/location"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tvLocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etDescription"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/bPickLocation"
                android:layout_marginTop="10dp"
                android:text=""/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_layout"
            android:layout_marginTop="10dp"
            android:text="Image" />

        <ImageView
            android:id="@+id/ivPreview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/tvImage"
            android:layout_centerHorizontal="true"
            android:src="@drawable/frame" />


    </RelativeLayout>

</ScrollView>