<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view_homescree"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivStoryImage"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/samplestoryimage" />

        <TextView
            android:id="@+id/tvStoryAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sandeep posted a story"
            android:layout_margin="8dp"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tvStoryDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ivStoryImage"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="The Domlur Bus Stop getting  spotfixed! It's a shame that residents of Bengaluru tolerate the defacement and vandalism of its well-made bus-stops. Hopefully, things will change now - with this superb work by concerned residents of the area"
            android:textSize="15sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvShareStory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/others_background"
                android:text="Share"
                android:padding="5dp"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
