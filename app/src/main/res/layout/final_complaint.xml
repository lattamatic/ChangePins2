<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tvCategory"
                android:layout_toRightOf="@+id/ivBack"
                android:layout_centerVertical="true"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electricity"
                android:layout_marginLeft="10dp"/>


        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/relLay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/tvComplantTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="*Title(max 100 char.):"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/etComplainTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvComplantTitle"
                android:layout_marginTop="10dp"
                android:ems="15"
                android:maxLength="100"
                android:maxLines="1"></EditText>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etComplainTitle"
                android:layout_marginTop="10dp"
                android:text="*Description:" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDescription"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_all_sides_black"
                android:ems="10"
                android:gravity="top"
                android:lines="5" />



            <LinearLayout
                android:id="@+id/location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etDescription"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">


                <ImageView
                    android:id="@+id/ivStaticMap"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:src="@drawable/staticmap"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvLocMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="Click on the icon to select location"
                    android:visibility="visible" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:indeterminate="true"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/but_location"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/location_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etDescription"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/but_location"
                    android:gravity="center"
                    android:text=""
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_layout"
                android:layout_marginTop="10dp"
                android:text="Image" />

            <ImageView
                android:id="@+id/ivPreview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/tvImage"
                android:layout_centerHorizontal="true"
                android:src="@drawable/frame"/>

            <ImageView
                android:id="@+id/bUploadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivPreview"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/gallery" />

            <ImageView
                android:id="@+id/bTakePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/bUploadImage"
                android:layout_marginRight="60dp"
                android:src="@drawable/take_pic" />

            <ImageView
                android:id="@+id/bSubmit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/ivPreview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:src="@drawable/send" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>